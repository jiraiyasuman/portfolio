<!-- Centered Contact Form -->
<main class="flex-grow flex items-center justify-center px-4">
    <div class="w-full max-w-lg bg-slate-900 p-8 rounded-2xl shadow-2xl">
        <h1 class="text-3xl font-bold text-center text-indigo-400 mb-8">Contact Us</h1>
        <!-- Add your form here -->
        <form id="contactForm" class="space-y-6">
            <div>
                <label class="block text-slate-300 mb-2" for="name">Name</label>
                <input id="name" name="name" type="text" placeholder="Your name"
                       class="w-full px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500 outline-none text-slate-100">
                <p id="nameError" class="text-red-500 text-sm mt-1 hidden">Please enter your name.</p>
            </div>

            <div>
                <label class="block text-slate-300 mb-2" for="email">Email</label>
                <input id="email" name="email" type="email" placeholder="your@email.com"
                       class="w-full px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500 outline-none text-slate-100">
                <p id="emailError" class="text-red-500 text-sm mt-1 hidden">Enter a valid email address.</p>
            </div>

            <div>
                <label class="block text-slate-300 mb-2" for="subject">Subject</label>
                <input id="subject" name="subject" type="text" placeholder="Subject"
                       class="w-full px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500 outline-none text-slate-100">
                <p id="subjectError" class="text-red-500 text-sm mt-1 hidden">Subject cannot be empty.</p>
            </div>

            <div>
                <label class="block text-slate-300 mb-2" for="message">Message</label>
                <textarea id="message" name="message" rows="4" placeholder="Your message here..."
                          class="w-full px-4 py-2 rounded-lg bg-slate-800 border border-slate-700 focus:ring-2 focus:ring-indigo-500 outline-none text-slate-100"></textarea>
                <p id="messageError" class="text-red-500 text-sm mt-1 hidden">Message must be at least 10 characters.</p>
            </div>

            <button type="submit"
                    class="w-full py-2 bg-indigo-500 hover:bg-pink-500 text-white font-semibold rounded-lg transition duration-300">
                Send Message
            </button>

            <p id="successMessage" class="text-green-400 text-center mt-4 hidden"> Message sent successfully!</p>
            <p id="errorMessage" class="text-red-400 text-center mt-4 hidden">Failed to send message. Try again later.</p>
        </form>
    </div>
</main>
<script>
    const form = document.getElementById("contactForm");
    // Real-time validation
    form.addEventListener("input", () => validateForm());
    function validateForm() {
        let valid = true; const name = document.getElementById("name");
        const email = document.getElementById("email");
        const subject = document.getElementById("subject");
        const message = document.getElementById("message");
        // Regex for email
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        // Validate Name
        if (name.value.trim() === "") {
            document.getElementById("nameError").classList.remove("hidden");

        valid = false;
    }
    else {
        document.getElementById("nameError").classList.add("hidden");
    }
    // Validate Email
    if (!emailPattern.test(email.value)) {
        document.getElementById("emailError").classList.remove("hidden"); valid = false;
    } else {
        document.getElementById("emailError").classList.add("hidden");
    }
    // Validate Subject
    if (subject.value.trim() === "") {
        document.getElementById("subjectError").classList.remove("hidden"); valid = false;
    } else {
        document.getElementById("subjectError").classList.add("hidden"); }
    // Validate Message
    if (message.value.trim().length < 10) {
        document.getElementById("messageError").classList.remove("hidden"); valid = false;
    } else {
        document.getElementById("messageError").classList.add("hidden");
    }
    return valid;
    }
    // Submit form
    form.addEventListener("submit", async (e) => { e.preventDefault();
        if (!validateForm()) return;
        const formData = { name: form.name.value, email: form.email.value, subject: form.subject.value, message: form.message.value };
        const response = await fetch("http://localhost:3000/send-email",
            { method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(formData) });
        if (response.ok) { document.getElementById("successMessage").classList.remove("hidden"); document.getElementById("errorMessage").classList.add("hidden");
            form.reset(); } else { document.getElementById("errorMessage").classList.remove("hidden");
            document.getElementById("successMessage").classList.add("hidden");
        }
    });
</script>
